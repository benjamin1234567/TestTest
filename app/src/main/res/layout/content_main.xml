<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bweak.navigationdrawer.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/atroxlogo"
        tools:layout_editor_absoluteY="-1dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="332dp"
        android:layout_height="408dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.712">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/side_nav_bar" />

        <ImageButton
            android:id="@+id/drillRig1"
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:layout_margin="35dp"
            app:srcCompat="@drawable/ic_menu_gallery" />

        <ImageButton
            android:id="@+id/drillRig2"
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/ic_menu_gallery" />

        <ImageButton
            android:id="@+id/drillRig3"
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="265dp"
            app:srcCompat="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/Atx_1234"
            android:layout_width="180dp"
            android:layout_height="39dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="45dp"
            android:text="Atx 1234"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/Atx_4321"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="165dp"
            android:text="Atx 4321"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/Atx_2314"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="275dp"
            android:text="Atx 2314"
            android:textSize="30sp" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
